programa {
  funcao inicio() {

    inteiro anos, meses, dias, total

    escreva ("Digite a idade em anos: ")
    leia (anos)

    escreva ("Digite a idade em meses: ")
    leia (meses)

    escreva ("Digite a idade em dias: ")
    leia (dias)

    total = (anos*365) + (meses*30) + dias

    escreva ("A idade total em dias é de: ", total)



    
  }
}
